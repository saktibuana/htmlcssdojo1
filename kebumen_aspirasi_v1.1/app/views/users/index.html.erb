<div class="main users-index">
  <div class="container">
    <h1 class="users-heading">Daftar Aspirator</h1>
    <% @users.each do |user| %>
      <div class="users-index-item">
        <div class="user-left">
          <img src="<%= "/user_images/#{user.image_name}" %>">
        </div>
        <div class="user-right">
          <%= link_to(user.name, "/users/#{user.id}") %>
        </div>
      </div>
    <% end %>
    <p class="form-footer">Copyright &copy; 2022 Kebumen Aspirasi</p>
  </div>
</div>