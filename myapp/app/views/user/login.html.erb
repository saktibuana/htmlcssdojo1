<div class="page-header" style="color: red;">
    <div class="container">
        <h1 class="title">Login Sebagai Admin</h1>
    </div>
    <div class="breadcrumb-box">
        <div class="container">
            <ul class="breadcrumb">
                <li>
                    <a href="index.html">Sign in</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<section class="page-section">
    <div class="container">
        <div class="row">
            <% if @error_message %>
                <p class="btn-danger"><%= @error_message %></p>
            <% end %>
			<div class="col-md-12">
				<%= form_tag("/login") do %>
					<input type="text" class="form-control" name="username" placeholder="username" value="<%= params[:username] %>">
					<input type="password" class="form-control" name="password" placeholder="Password">
					<input type="submit" name="" value="Sign In" class="btn btn-primary">
				<% end %>
			</div>
        </div>
    </div>
</section>