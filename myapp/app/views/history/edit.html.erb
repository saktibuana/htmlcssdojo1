<div class="page-header" style="color: red;">
    <div class="container">
        <h1 class="title">Edit Sejarah</h1>
    </div>
    <div class="breadcrumb-box">
        <div class="container">
            <ul class="breadcrumb">
                <li>
                    <a href="index.html">Edit History</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<section class="page-section">
    <div class="container">
        <div class="row">
            
			<div class="col-md-12">
				<%= form_tag("/history/#{@history.id}/action_edit") do %>
					<input type="text" class="form-control" value="<%= @history.title %>" name="title" placeholder="Title">
					<textarea name="desc" placeholder="Description" class="form-control"><%= @history.desc %></textarea>
					<input type="date" name="incident_date" class="form-control" value="<%= @history.incident_date %>">
					<input type="submit" name="" value="Submit" class="btn btn-primary">
				<% end %>
			</div>
        </div>
    </div>
</section>