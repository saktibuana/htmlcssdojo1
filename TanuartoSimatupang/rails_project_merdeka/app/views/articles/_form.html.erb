    <section class="section">
      <div class="container">
        <div class="row mb-5 align-items-end">
          <div class="col-md-6" data-aos="fade-up">

            <h2>Artikel Baru</h2>
            <p class="mb-0">Silakan ketikkan artikel Anda</p>
          </div>

        </div>

        <div class="row">
          <div class="col-md-6 mb-5 mb-md-0" data-aos="fade-up">
            <%= form_with model: article, class: "php-email-form" do |form| %>

              <div class="row">
                <div class="col-md-12 form-group mt-3">
                  <%= form.label :title, "Judul" %>
                  <%= form.text_field :title, class: "form-control" %>
                  <% article.errors.full_messages_for(:title).each do |message| %>
                    <div><%= message %></div>
                  <% end %>
                </div>
                <div class="col-md-12 form-group mt-3">
                  <%= form.label :author, "Penulis" %><br>
                  <%= form.text_field :author, class: "form-control" %>
                  <% article.errors.full_messages_for(:author).each do |message| %>
                    <div><%= message %></div>
                  <% end %>
                </div>
                <div class="col-md-12 form-group mt-3">
                  <%= form.label :body, "Isi" %>
                  <%= form.text_area :body, class: "form-control" %>
                  <% article.errors.full_messages_for(:body).each do |message| %>
                    <div><%= message %></div>
                  <% end %>
                </div>

                <div class="col-md-12 mb-3">
                  <div class="loading">Loading</div>
                  <div class="error-message"></div>
                  <div class="sent-message">Your message has been sent. Thank you!</div>
                </div>

                <div class="col-md-6 form-group">
                  <%= form.submit "Send Message", class: "btn btn-primary d-block w-100"  %>
                </div>
              </div>
            <% end %>
          </div>

        </div>
      </div>
    </section>