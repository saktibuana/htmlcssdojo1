<!DOCTYPE html>
<html>
  <head>
    <title>WisdomApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>


  </head>

  <body>
    <header>
      <div class="header-logo">
        <% if @current_user %>
          <%= link_to("WisdomApp", "/posts/index") %>
        <% else %>
          <%= link_to("WisdomApp", "/") %>
        <% end %>
      </div>
      <ul class="header-menus" align:"left">
        <% if @current_user %>
          <li>
            <%= link_to(@current_user.name, "/users/#{@current_user.id}") %>
          </li>
          <li>
            <%= link_to("Wisdoms", "/posts/index") %>
          </li>
          <li>
            <%= link_to("Wisdowm Baru", "/posts/new") %>
          </li>
          <li>
            <%= link_to("Pengguna", "/users/index") %>
          </li>
          <li>
            <%= link_to("Keluar", "/logout", {method: :post}) %>
          </li>
        <% else %>
          <li>
            <%= link_to("Tentang", "/about") %>
          </li>
          <li>
            <%= link_to("Daftar", "/signup") %>
          </li>
          <li>
            <%= link_to("Masuk", "/login") %>
          </li>
        <% end %>
      </ul>
    </header>

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    
    <%= yield %>

  <footer align="center">
  <p align="center"><b>Author &reg;  Imana_Kondou In &hearts; kelasrubyproabatch3@2022 <br>
  <a href="https://missimanakondou.wordpress.com/" target="_blank" align="center">Powered &copy; www.missimanakondou.wordpress.com</a></p>
</footer>


  </body>
  
</html>
<script type="text/javascript">
  $(document).ready(function() {
    $(document).on('click', '.previewimk', function(e) {
      var link = $(this);
      $(".previewimk").modal('show');
      $('.link_file').attr('src', link.attr('data-title'));
    });
    $(document).on('click', '.close_button', function(e) {
      // alert('hallo');
      // var link = $(this);
      $('.link_file').attr('src', '');
      $(".previewimk").modal('hide');
    });
  })
</script>