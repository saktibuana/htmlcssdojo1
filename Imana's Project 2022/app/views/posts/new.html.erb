<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading" align="center">Tambah wisdom baru</h1>

    <!--NOTE: menambah upload gambar => tambahkan pada form tag {multipart: true}=>(new.html/post) -->
    <%= form_tag("/posts/create",{multipart: true}) do %>

      <div class="form">
        <div class="form-body">
          <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          
          <p>Wisdom </p>
          <textarea name="content"><%= @post.content %></textarea>
          
          <p>Gambar</p>
          <input name="image" type="file">


          <input type="submit" value="Tambah">
        </div>
      </div>
    <% end %>
  </div>
</div>