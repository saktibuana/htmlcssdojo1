<div class="card my-3 " style="width:300px; margin:0 auto;">
  <div class="card-body">
    <h5 class="card-title">Edit</h5>
    <%= form_tag("/users/#{@user.id}/update", {multipart: true}) do %>
        <label class="form-label">Name</label>
        <input name="name" value="<%= @user.name %>" class="form-control">
        <label class="form-label">Image</label>
        <input name="image" type="file" class="form-control">
        <label class="form-label">Email</label>
        <input name="email" value="<%= @user.email %>" class="form-control">
        <input type="submit" value="Save" class="my-2 btn btn-success">
    <% end %>
  </div>
</div>